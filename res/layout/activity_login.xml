<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/layout_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="42dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editbox_background_normal"
            android:drawableLeft="@drawable/login_account"
            android:drawablePadding="18dip"
            android:ems="10"
            android:hint="@string/user_name_hint"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:textColorHint="@color/gray_text_color"
            android:textSize="@dimen/text_size" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edt_psd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/editbox_background_normal"
            android:drawableLeft="@drawable/login_psd"
            android:drawablePadding="18dip"
            android:ems="10"
            android:hint="@string/user_psd_hint"
            android:inputType="textPassword"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:textColorHint="@color/gray_text_color"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_bg"
            android:text="@string/login"
            android:textColor="@color/white_color"
            android:textSize="@dimen/common_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" >

            <TextView
                android:id="@+id/tv_forget_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/forget_psd"
                android:textColor="@color/base_color_text_gray"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_user_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:text="@string/user_regist"
                android:textColor="@color/base_color_text_gray"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="42dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/gray_line_color" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="@dimen/text_size"
                android:text="æˆ–" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/gray_line_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_qq"
                android:layout_width="@dimen/img_wight_size"
                android:layout_height="@dimen/img_hight_size"
                android:layout_margin="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_qq" />

            <ImageView
                android:id="@+id/image_weixin"
                android:layout_width="@dimen/img_wight_size"
                android:layout_height="@dimen/img_hight_size"
                android:layout_margin="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_weixin" />

            <ImageView
                android:id="@+id/image_sina"
                android:layout_width="@dimen/img_wight_size"
                android:layout_height="@dimen/img_hight_size"
                android:layout_margin="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_sina" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>