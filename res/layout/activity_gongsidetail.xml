<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/layout_actionbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/base_color_text_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_hight"
        android:layout_marginBottom="4dp"
        android:background="@color/white_color"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_jbxx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="基本信息"
            android:textColor="@color/title_yellow_text_color"
            android:textSize="@dimen/textSize_svprogresshuddefault_msg" />

        <View
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/base_color_text_gray" />

        <TextView
            android:id="@+id/tv_rzxx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="认证信息"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/textSize_svprogresshuddefault_msg" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_hight"
            android:layout_gravity="bottom"
            android:background="@drawable/button_bg"
            android:enabled="true"
            android:text="拨打电话"
            android:textColor="@color/white_color"
            android:textSize="@dimen/common_text_size" />
    </FrameLayout>

</LinearLayout>